<UserControl x:Class="Scoreboard.Bulb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Scoreboard"
             Width="{Binding Diameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
             Height="{Binding Diameter, RelativeSource={RelativeSource AncestorType=UserControl}}">
    <Grid>
        <Ellipse x:Name="PART_Ellipse"
                 Width="{Binding Diameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Height="{Binding Diameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Fill="{Binding OffColor, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>